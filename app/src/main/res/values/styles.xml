<?xml version="1.0" encoding="utf-8"?>
<resources>


    <style name="til_style">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/peyda_regular</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="tie_style">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/peyda_regular</item>
        <item name="android:background">@color/white_100</item>
        <item name="android:gravity">center|right</item>
        <item name="android:inputType">text</item>
        <item name="android:textSize">@dimen/_14sdp</item>
        <item name="android:layout_marginLeft">@dimen/_10sdp</item>
        <item name="android:layout_marginRight">@dimen/_10sdp</item>
        <item name="android:textColorHint">@color/black</item>
        <item name="android:textColor">@color/black</item>

    </style>

    <style name="cv_session_activity_style">

        <item name="android:layout_width">@dimen/_130sdp</item>
        <item name="android:layout_height">@dimen/_35sdp</item>
        <item name="android:backgroundTint">@color/navy_blue_900</item>
        <item name="cardCornerRadius">@dimen/_10sdp</item>
        <item name="cardElevation">@dimen/_8sdp</item>
        <item name="strokeColor">@color/gold_300</item>
        <item name="strokeWidth">@dimen/_1sdp</item>

    </style>

    <style name="btn_session_activity_style">

        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:fontFamily">@font/peyda_regular</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/white_90</item>
        <item name="android:textSize">@dimen/_16ssp</item>


    </style>

    <style name="tv_session_style">

        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:fontFamily">@font/peyda_regular</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">@dimen/_16ssp</item>
        <item name="android:layout_margin">@dimen/_1sdp</item>

    </style>

</resources>