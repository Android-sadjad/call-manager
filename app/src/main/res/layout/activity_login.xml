<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_90">


    <View
        android:id="@+id/view_header"
        android:layout_width="match_parent"
        android:layout_height="250dp"
        android:background="@color/navy_blue_900"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_header_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="@string/login_page"
        android:fontFamily="@font/peyda_bold"
        android:textColor="@color/white_90"
        android:textSize="@dimen/text_size_Xlarge"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/cv_login"
        app:layout_constraintTop_toTopOf="@id/view_header" />



    <com.google.android.material.card.MaterialCardView

        android:id="@+id/cv_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spade_middle"
        android:elevation="@dimen/spade_medium"
        app:cardBackgroundColor="@color/white_100"
        app:cardCornerRadius="@dimen/spade_medium"
        app:cardElevation="@dimen/spade_xlarge"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false"
        app:layout_constraintBottom_toBottomOf="@id/view_header"
        app:strokeColor="@color/gold_300"
        app:strokeWidth="1dp"
        app:layout_constraintTop_toBottomOf="@id/view_header">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/spade_xlarge"
            android:layout_marginBottom="@dimen/spade_3xlarge"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spade_middle"
                android:hint="@string/username"
                app:startIconDrawable="@drawable/ic_person_bold"
                app:startIconTint="@color/navy_blue_900"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tie_user_name"
                    android:layout_width="match_parent"
                    android:fontFamily="@font/peyda_regular"
                    android:layout_height="wrap_content"
                    android:background="@color/white_100"
                    android:gravity="center|right"
                    android:inputType="text" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/spade_middle"
                android:layout_marginTop="@dimen/spade_medium"
                android:hint="@string/password"

                app:startIconDrawable="@drawable/ic_lock"
                app:startIconTint="@color/navy_blue_900"
                >

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tie_password"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="@color/white_100"

                    android:gravity="center|right"
                    android:fontFamily="@font/peyda_regular"
                    android:inputType="textVisiblePassword" />

            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_40sdp"
        android:backgroundTint="@color/navy_blue_900"
        app:cardElevation="@dimen/spade_2xlarge"
        app:layout_constraintBottom_toBottomOf="@id/cv_login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:strokeWidth="1dp"
        app:strokeColor="@color/gold_300"
       app:cardCornerRadius="@dimen/_10sdp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_login">

        <TextView
            android:id="@+id/btn_login"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center"
            android:text="@string/login"
            android:textColor="@color/white_90"
            android:textSize="@dimen/text_size_Xlarge"
            android:fontFamily="@font/peyda_bold"
            />
    </com.google.android.material.card.MaterialCardView>


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/spade_large"
        android:gravity="center"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent">


        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/ic_call_navy_blue" />

        <TextView
            android:id="@+id/partner_string"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/peyda_regular"
            android:layout_marginTop="@dimen/spade_medium"
            android:text="@string/app_name"
            android:textColor="@color/navy_blue_900"
            android:textSize="@dimen/text_size_middle" />

        <TextView
            android:id="@+id/powered_by"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/spade_small"
            android:text="@string/ANODYNE"
            android:textColor="@color/navy_blue_900"

            android:textSize="@dimen/text_size_small" />

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>