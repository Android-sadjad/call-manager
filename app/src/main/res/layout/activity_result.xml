<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/white_90">


    <View
        android:id="@+id/view_header"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:background="@color/navy_blue_900"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/tv_header_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/peyda_bold"
        android:gravity="center"
        android:text="@string/meeting_result"
        android:textColor="@color/white_90"
        android:textSize="@dimen/text_size_Xlarge"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/cv_login"
        app:layout_constraintTop_toTopOf="@id/view_header" />


    <com.google.android.material.card.MaterialCardView

        android:id="@+id/cv_login"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/spade_middle"
        android:elevation="@dimen/spade_medium"
        app:cardBackgroundColor="@color/white_100"
        app:cardCornerRadius="@dimen/spade_medium"
        app:cardElevation="@dimen/spade_xlarge"
        app:cardPreventCornerOverlap="false"
        app:cardUseCompatPadding="false"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:strokeColor="@color/gold_300"
        app:strokeWidth="1dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/spade_small"
            android:layout_marginBottom="@dimen/spade_xlarge"
            android:gravity="center"
            android:orientation="vertical">

            <com.google.android.material.textfield.TextInputLayout
                style="@style/til_style"
                android:hint="@string/agent">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tie_agent"
                    style="@style/tie_style" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/til_style"
                android:hint="@string/situation">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tie_situation"
                    style="@style/tie_style" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/til_style"
                android:hint="@string/price">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tie_price"
                    style="@style/tie_style" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/til_style"
                android:hint="@string/priority">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tie_priority"
                    style="@style/tie_style" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/til_style"
                android:hint="@string/date_meet">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tie_date"
                    style="@style/tie_style" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/til_style"
                android:hint="@string/duratoin_meet">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tie_duration_meet"
                    style="@style/tie_style" />

            </com.google.android.material.textfield.TextInputLayout>

            <com.google.android.material.textfield.TextInputLayout
                style="@style/til_style"
                android:hint="@string/description">

                <com.google.android.material.textfield.TextInputEditText
                    android:id="@+id/tie_description"
                    style="@style/tie_style" />

            </com.google.android.material.textfield.TextInputLayout>


        </LinearLayout>

    </com.google.android.material.card.MaterialCardView>

    <com.google.android.material.card.MaterialCardView
        android:layout_width="@dimen/_200sdp"
        android:layout_height="@dimen/_40sdp"
        android:backgroundTint="@color/navy_blue_900"
        app:cardCornerRadius="@dimen/_10sdp"
        app:cardElevation="@dimen/spade_2xlarge"
        app:layout_constraintBottom_toBottomOf="@id/cv_login"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/cv_login"
        app:strokeColor="@color/gold_300"
        app:strokeWidth="1dp">

        <TextView
            android:id="@+id/tv_submit_meet"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:fontFamily="@font/peyda_bold"
            android:gravity="center"
            android:text="@string/submit_result"
            android:textColor="@color/white_90"
            android:textSize="@dimen/text_size_Xlarge" />
    </com.google.android.material.card.MaterialCardView>


</androidx.constraintlayout.widget.ConstraintLayout>