<?xml version="1.0" encoding="utf-8"?>

<com.google.android.material.card.MaterialCardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/card_rv_main_height"
    android:layout_marginBottom="@dimen/_8sdp"
    android:backgroundTint="@color/white_80"
    app:cardCornerRadius="@dimen/card_rv_main_radius"
    app:cardElevation="@dimen/card_rv_main_elevation"
    app:strokeColor="@color/gold_300"
    app:strokeWidth="@dimen/card_rv_main_stroke_width">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tv_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/_10sdp"
            android:fontFamily="@font/peyda_bold"
            android:text="@string/session_name"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_session_name_text_size"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"

            />

        <TextView
            android:id="@+id/tv_phone_number"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_5sdp"
            android:fontFamily="@font/peyda_regular"
            android:text="@string/sample_description"
            android:textColor="@color/black"
            android:textSize="@dimen/tv_phone_number_text_size"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintRight_toRightOf="@id/tv_title"
            app:layout_constraintTop_toBottomOf="@id/tv_title"></TextView>


    </androidx.constraintlayout.widget.ConstraintLayout>
</com.google.android.material.card.MaterialCardView>


