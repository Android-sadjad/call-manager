<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- Bottom 2dp Shadow -->
    <item>
        <shape  android:shape="rectangle">

            <solid android:color="#000" />
            <corners android:radius="@dimen/spade_middle" />
            <size android:width="250dp"
                android:height="50dp"/>

        </shape>
    </item>

    <!-- White Top color -->
    <item android:bottom="10px">

        <shape  android:shape="rectangle">

            <solid android:color="@color/gold_900" />
            <corners android:radius="@dimen/spade_middle" />
            <size android:width="250dp"
                android:height="50dp"/>


        </shape>

    </item>


</layer-list>